{
    "manifest_version": 2,
    "name":    "Test Extension",
    "description": "Pauses / resumes JavaScript execution",
    "version": "1.0",

    "background": {
        "persistent": false,
        "scripts": ["jquery-2.1.1.min.js", "background.js"]
    },
    "content_scripts": [{
        "matches": ["*://*.stackoverflow.com/*"],
        "js":      ["jquery-2.1.1.min.js", "content.js"]
    }],
    "browser_action": {
        "default_title": "Test Extension",
        "default_icon": "Ninja-icon-white.png"
    },

    "permissions": ["activeTab", "storage", "debugger", "tabs"]
}